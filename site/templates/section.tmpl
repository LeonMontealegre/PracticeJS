        <title>Practice JS</title>
    </head>
    <body>
        <div class="header">
            <h1><a href="/">Practice JS</a><h1>
            <h3>CodingBat exercises converted to JavaScript</h3>
        </div>

        <table class="sections">
            <tbody>
                {{ $sectionid := .SectionID }}
                {{ range $i, $problem := .Problems }}
                    {{ if mod $i 3 }}
                    <tr colspan="3">
                    {{ end }}
                        <td colspan="1">
                            <a href="/section/{{ $sectionid }}/{{ $problem.Id }}">
                                <div>
                                    <h2>{{ $problem.Id }}</h2>
                                    <input type="checkbox" {{ if $problem.Complete }}checked{{ end }}></input>
                                </div>
                            </a>
                        </td>
                    {{ if mod2 $i 3 }}
                    </tr>
                    {{ end }}
                {{ end }}
            </tbody>
        </table>

    </body>

</html>
